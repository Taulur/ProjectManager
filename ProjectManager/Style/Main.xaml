<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Border" x:Key="ShadowBorder">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect 
      ShadowDepth="3" 
      Color="Black" 
      Opacity="0.5" 
      BlurRadius="10" 
      Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="CornerButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5"
              Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"
              Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="StackPanel" x:Key="PagePanel">
        <Setter Property="Background" Value="AliceBlue"/>
    </Style>

    <Style TargetType="Border" BasedOn="{StaticResource ShadowBorder}" x:Key="ProjectBorder">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Width" Value="235"/>
        <Setter Property="Height" Value="225"/>
        <Setter Property="Background" Value="White"/>
    </Style>
    
    <Style TargetType="Border" BasedOn="{StaticResource ShadowBorder}" x:Key="TaskBorder">

        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Height" Value="165"/>
        <Setter Property="Background" Value="White"/>
        
    </Style>

    <Style TargetType="Border" x:Key="ProjectColor">
        <Setter Property="CornerRadius" Value="7.5"/>
        <Setter Property="Height" Value="10"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ProjectName">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ProjectDesc">
        <Setter Property="Margin" Value="1,3,1,1"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontStyle" Value="Italic"/>
 
        <Setter Property="Width" Value="215"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ProjectText">
        <Setter Property="Margin" Value="3"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ProjectValue">
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource CornerButton}" x:Key="ProjectChangeButton">
        <Setter Property="Background" Value="RoyalBlue"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="30"/>
    </Style>


    <Style TargetType="ComboBox" x:Key="RoleComboBox">
       
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="30"/>
       
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource CornerButton}" x:Key="ProjectDeleteButton">
        <Setter Property="Background" Value="PaleVioletRed"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style TargetType="ProgressBar" x:Key="ProgressBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border x:Name="PART_Track"
                        CornerRadius="5"
                        Background="LightGray"
                        BorderThickness="1"
                        BorderBrush="Black">
                        <Border x:Name="PART_Indicator"
                            CornerRadius="5"
                            Background="{TemplateBinding Foreground}"
                            HorizontalAlignment="Left"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#00C853"/>
    </Style>

    <Style TargetType="Border" x:Key="MainBorder" BasedOn="{StaticResource ShadowBorder}">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="Border" x:Key="HistoriesBorder" BasedOn="{StaticResource ShadowBorder}">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style TargetType="Border" x:Key="HistoryBorder">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="RoyalBlue"/>
        <Setter Property="Margin" Value="3"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="HistoryText">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="3"/>
       
    </Style>

    <Style TargetType="TextBlock" x:Key="PageTitle" >
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="22"/>
    </Style>

    <Style TargetType="Border" BasedOn="{StaticResource ShadowBorder}" x:Key="TopBarBorder">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource CornerButton}" x:Key="TopBarButton">
        <Setter Property="Background" Value="AliceBlue"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Width" Value="145"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource CornerButton}" x:Key="MiddleBarButton">
        <Setter Property="Background" Value="RoyalBlue"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="35,0,35,0"/>
        <Setter Property="Width" Value="175"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <Style TargetType="Label" x:Key="ProjectsTitle">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="10,5,5,5"/>
    </Style>

    <Style TargetType="ScrollViewer" x:Key="ScrollViewer">
        <Setter Property="Margin" Value="2.5"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="Black"/>
    </Style>

    <Style TargetType="ScrollViewer" BasedOn="{StaticResource ScrollViewer}" x:Key="ProjectsScrollViewer">
        
    </Style>

    <Style TargetType="ScrollViewer" BasedOn="{StaticResource ScrollViewer}" x:Key="HistoryScrollViewer">
       
    </Style>

    <Style TargetType="TextBlock" x:Key="TaskTemplateText">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style TargetType="Viewbox" x:Key="TaskViewBox">
        <Setter Property="Width" Value="150"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    

</ResourceDictionary>