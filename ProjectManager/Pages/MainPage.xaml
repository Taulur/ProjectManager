<Page x:Class="ProjectManager.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManager.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
       d:DesignHeight="700" d:DesignWidth="1250"
      Title="MainPage">
    
    <Page.Resources>
    <DataTemplate x:Key="ProjectCardTemplate">
           
                <Border Style="{StaticResource ProjectBorder}" Cursor="Hand" Tag="{Binding}" MouseLeftButtonDown="OnCardClick">
                <StackPanel>
                    <Border Style="{StaticResource ProjectColor}" Background="{Binding LastVersion.Data.Color}"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="2.5" FontSize="20" Text="📁" />
                        <TextBlock Style="{StaticResource ProjectName}" Text="{Binding LastVersion.Data.Title}" />
                    </StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="50">
                        <TextBlock Style="{StaticResource ProjectDesc}" Text="{Binding LastVersion.Data.Description}"   />
                    </ScrollViewer>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ProjectText}" Text="📅 Дата создания:"  />
                        <TextBlock Style="{StaticResource ProjectValue}" Text="{Binding LastVersion.CreatedAt, StringFormat={}{0:HH:mm dd/MM/yyyy}}"  />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ProjectText}" Text="🎖️ Ваша роль:"  />
                        <TextBlock Style="{StaticResource ProjectValue}" Text="{Binding UserRoleInProject}"  />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ProjectText}" Text="📋 Задачи:" />
                        <TextBlock Style="{StaticResource ProjectValue}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1}">
                                    <Binding Path="CompletedTasksCount" Mode="OneWay" />
                                    <Binding Path="TotalTasksCount" Mode="OneWay" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel >
                        <ProgressBar Height="10" Margin="3" Style="{StaticResource ProgressBar}" 
                         Value="{Binding CompletedTasksCount, Mode=OneWay}" 
                         Maximum="{Binding TotalTasksCount, Mode=OneWay}" />
                    </StackPanel >
                    <StackPanel Margin="0,8,0,0"  Orientation="Horizontal" VerticalAlignment="Bottom"  HorizontalAlignment="Center">
                        <Button  Content="✏️ Изменить" Width="110" FontSize="12"  Click="EditProject" Tag="{Binding}" Margin="0,0,0,0" Cursor="Hand"/>
                        <Button  Content="🗑️ Удалить" Width="110 " FontSize="12"  Click="RemoveProject" Tag="{Binding}" Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>
         
        </DataTemplate>
        <DataTemplate x:Key="HistoryTemplate">
           
                <Border Style="{StaticResource HistoryBorder}" MouseLeftButtonDown="LeftHistoryClick" MouseRightButtonDown="RightHistoryClick" Tag="{Binding}"  Cursor="Hand">
                    <StackPanel>
                    <Viewbox MaxHeight="25">
                        <TextBlock Margin="3" HorizontalAlignment="Center" Text="{Binding DisplayText, Mode=OneWay}"/>
                    </Viewbox>
                </StackPanel>
                    <Border.ToolTip >
                        <ToolTip Background="White" Foreground="Black">
                            <StackPanel>
                                <Border Margin="3" Padding="3" BorderBrush="RoyalBlue" BorderThickness="1" CornerRadius="10">
                                    <TextBlock  HorizontalAlignment="Center" FontSize="11" FontStyle="Italic"  Text="ЛКМ - Проект | ПКМ - Участник"/>
                                </Border>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3" Text="👤Пользователь : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3" Text="{Binding Projectuser.User.Username}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="👨‍💼 ФИО : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="{Binding Projectuser.User.Fullname}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="🎖️ Имеет роль : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="{Binding Projectuser.Role.Title}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="✔️ Выполнил : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3" Text="{Binding Action.Title}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="🔴 Затронут : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="{Binding DisplayTitle}"/>
                                </StackPanel>
                                <Border Margin="3" BorderBrush="RoyalBlue" BorderThickness="3" CornerRadius="10" Style="{StaticResource ShadowBorder}">
                                    <StackPanel>
                                        <ItemsControl ItemsSource="{Binding DisplayChanges}" HorizontalContentAlignment="Stretch">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock HorizontalAlignment="Center" Width="250" TextAlignment="Center" TextWrapping="Wrap" Margin="3"  Text="{Binding}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource HistoryText}" Text="📅 Было выполнено : "/>
                                    <TextBlock Style="{StaticResource HistoryText}" Text="{Binding CreatedAt, StringFormat={}{0:HH:mm dd/MM/yyyy}}"/>
                                </StackPanel>
                            </StackPanel>
                        </ToolTip>
                    </Border.ToolTip>
                </Border>
     
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <StackPanel x:Name="MainContent" Style="{StaticResource PagePanel}">
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Margin="15,5,5,5" FontSize="25" Text="📋"/>
            <TextBlock Style="{StaticResource PageTitle}" Text="Менеджер проектов"></TextBlock>
        </StackPanel>
        <Border Style="{StaticResource TopBarBorder}">
            <StackPanel Orientation="Horizontal">
                    <Button VerticalAlignment="Center" Height="50" FontSize="20"  Cursor="Hand" Click="ToAuth" Content="👤Авторизация"/>
                    <Button x:Name="UsersButton" VerticalAlignment="Center" Height="50" FontSize="20"  Cursor="Hand" Click="ShowUsersPage" Content="👥 Пользователи"/>
                </StackPanel>
        </Border>
       
       
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Label Style="{StaticResource ProjectsTitle}" Content="Доступные проекты : "/>
                    <Label Margin="0,5,5,5" FontSize="17" FontWeight="SemiBold" Content="{Binding ProjectsCount}"/>
            </StackPanel>
            
            <Button x:Name="AddButton" Grid.Column="1" Cursor="Hand" Click="AddProject" HorizontalAlignment="Right" Content="➕ Новый проект"/>
        </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <materialDesign:TransitioningContent>
                    <materialDesign:TransitioningContent.OpeningEffects>
                        <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.75" />
                        <materialDesign:TransitionEffect Kind="SlideInFromBottom" Duration="0:0:0.75" />
                    </materialDesign:TransitioningContent.OpeningEffects>
                    <Border Style="{StaticResource MainBorder}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="3" HorizontalAlignment="Center" Grid.Column="1" Orientation="Horizontal">
                                    <TextBox x:Name="projectBox" Width="225" TextChanged="ProjectSearchQuery_Changed" Text="{Binding ProjectSearchQuery, UpdateSourceTrigger=PropertyChanged}" FontSize="13" materialDesign:HintAssist.Hint="Введите текст для поиска"/>
                                    <Border Margin="3" Grid.Row="1" Grid.Column="0" Padding="3" BorderBrush="RoyalBlue" BorderThickness="1" CornerRadius="5"  >
                                        <ComboBox x:Name="projectCombo" SelectionChanged="ComboBox_SelectionChanged" VerticalAlignment="Center" Width="125" BorderThickness="0" ItemsSource="{Binding ProjectsFilter}" IsEditable="False" Margin="0,5"/>
                                    </Border>
                                    <Button Click="Button_Click" Height="35" VerticalAlignment="Center" Margin="5" >
                                        <materialDesign:PackIcon Height="25" Width="25" Kind="Refresh" />
                                    </Button>
                                </StackPanel>

                            </Grid>
                            <ScrollViewer Height="500" Grid.Column="0" Style="{StaticResource ProjectsScrollViewer}">

                                <ItemsControl ItemsSource="{Binding projectsView}" ItemTemplate="{StaticResource ProjectCardTemplate}" HorizontalContentAlignment="Stretch">

                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>

                                            <WrapPanel  HorizontalAlignment="Center">

                                            </WrapPanel>

                                        </ItemsPanelTemplate>

                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </materialDesign:TransitioningContent>
                    
                <materialDesign:TransitioningContent Grid.Column="1">
                    <materialDesign:TransitioningContent.OpeningEffects>
                        <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.75" />
                        <materialDesign:TransitionEffect Kind="SlideInFromRight" Duration="0:0:0.75" />
                    </materialDesign:TransitioningContent.OpeningEffects>
                    <Border  Style="{StaticResource HistoriesBorder}">
                        <StackPanel>
                          
                            <Label HorizontalAlignment="Center" Foreground="Gray" FontSize="11" Content="Наведитесь для подробной информации"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="3" HorizontalAlignment="Center" Grid.Column="0" Orientation="Horizontal">
                                    <TextBox x:Name="historytBox" Width="150"  TextChanged="historytBox_TextChanged" Text="{Binding HistorySearchQuery, UpdateSourceTrigger=PropertyChanged}" FontSize="12" materialDesign:HintAssist.Hint="Введите текст для поиска"/>

                                    <Button Click="Button_Click_1" Height="25" Width="50" VerticalAlignment="Center" Margin="3" >
                                        <materialDesign:PackIcon Height="20" Width="20" Kind="Refresh" />
                                    </Button>
                                </StackPanel>

                            </Grid>
                            <ScrollViewer MaxHeight="400" Style="{StaticResource HistoryScrollViewer}">
                                <ItemsControl ItemsSource="{Binding ProjectHistories}" ItemTemplate="{StaticResource HistoryTemplate}" HorizontalContentAlignment="Stretch">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel>

                                            </StackPanel>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>

                    </Border>
                </materialDesign:TransitioningContent>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
