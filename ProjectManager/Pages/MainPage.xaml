<Page x:Class="ProjectManager.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1100"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="MainPage">
    
    <Page.Resources>
    <DataTemplate x:Key="ProjectCardTemplate">
            <Border Style="{StaticResource ProjectBorder}" Cursor="Hand" Tag="{Binding}" MouseLeftButtonDown="OnCardClick">
                <StackPanel>
                    <Border Style="{StaticResource ProjectColor}" Background="{Binding LastVersion.Data.Color}"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="2.5" FontSize="20" Text="📁" />
                        <TextBlock Style="{StaticResource ProjectName}" Text="{Binding LastVersion.Data.Title}" />
                    </StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="50">
                        <TextBlock Style="{StaticResource ProjectDesc}" Text="{Binding LastVersion.Data.Description}"   />
                    </ScrollViewer>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ProjectText}" Text="📅 Дата создания:"  />
                        <TextBlock Style="{StaticResource ProjectValue}" Text="{Binding LastVersion.CreatedAt, StringFormat={}{0:HH:mm dd/MM/yyyy}}"  />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ProjectText}" Text="🎖️ Ваша роль:"  />
                        <TextBlock Style="{StaticResource ProjectValue}" Text="{Binding UserRoleInProject}"  />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ProjectText}" Text="📋 Задачи:" />
                        <TextBlock Style="{StaticResource ProjectValue}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1}">
                                    <Binding Path="CompletedTasksCount" Mode="OneWay" />
                                    <Binding Path="TotalTasksCount" Mode="OneWay" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel >
                        <ProgressBar Height="10" Margin="3" Style="{StaticResource ProgressBar}" 
                         Value="{Binding CompletedTasksCount, Mode=OneWay}" 
                         Maximum="{Binding TotalTasksCount, Mode=OneWay}" />
                    </StackPanel >
                    <StackPanel Margin="0,8,0,0"  Orientation="Horizontal" VerticalAlignment="Bottom"  HorizontalAlignment="Center">
                        <Button Style="{StaticResource ProjectChangeButton}" Content="✏️ Изменить" Click="edit" Tag="{Binding}" Margin="0,0,16,0" Cursor="Hand"/>
                        <Button Style="{StaticResource ProjectDeleteButton}"  Content="🗑️ Удалить" Click="remove" Tag="{Binding}" Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="HistoryTemplate">
            <Border Style="{StaticResource HistoryBorder}" MouseLeftButtonDown="leftHistory" MouseRightButtonDown="rightHistory" Tag="{Binding}"  Cursor="Hand">
                    <StackPanel>
                        <TextBlock Margin="3" HorizontalAlignment="Center" Text="{Binding DisplayText, Mode=OneWay}"/>
                    </StackPanel>
                    <Border.ToolTip >
                        <ToolTip Background="White" Foreground="Black">
                            <StackPanel>
                                <Border Margin="3" Padding="3" BorderBrush="RoyalBlue" BorderThickness="1" CornerRadius="10">
                                    <TextBlock  HorizontalAlignment="Center" FontSize="11" FontStyle="Italic"  Text="ЛКМ - Проект | ПКМ - Участник"/>
                                </Border>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3" Text="👤Пользователь : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3" Text="{Binding Projectuser.User.Username}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="👨‍💼 ФИО : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="{Binding Projectuser.User.Fullname}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="🎖️ Имеет роль : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="{Binding Projectuser.Role.Title}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="✔️ Выполнил : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3" Text="{Binding Action.Title}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="🔴 Затронут : "/>
                                    <TextBlock HorizontalAlignment="Center" Margin="3"  Text="{Binding DisplayTitle}"/>
                                </StackPanel>
                                <Border Margin="3" BorderBrush="RoyalBlue" BorderThickness="3" CornerRadius="10" Style="{StaticResource ShadowBorder}">
                                    <StackPanel>
                                        <ItemsControl ItemsSource="{Binding DisplayChanges}" HorizontalContentAlignment="Stretch">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock HorizontalAlignment="Center" Width="250" TextAlignment="Center" TextWrapping="Wrap" Margin="3"  Text="{Binding}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource HistoryText}" Text="📅 Было выполнено : "/>
                                    <TextBlock Style="{StaticResource HistoryText}" Text="{Binding CreatedAt, StringFormat={}{0:HH:mm dd/MM/yyyy}}"/>
                                </StackPanel>
                            </StackPanel>
                        </ToolTip>
                    </Border.ToolTip>
                </Border>
        </DataTemplate>
        
    </Page.Resources>

    <StackPanel x:Name="MainContent" Style="{StaticResource PagePanel}">
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Margin="15,5,5,5" FontSize="25" Text="📋"/>
            <TextBlock Style="{StaticResource PageTitle}" x:Name="Title" Text="Менеджер проектов"></TextBlock>
        </StackPanel>
        <Border Style="{StaticResource TopBarBorder}">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource TopBarButton}" Cursor="Hand" Click="users" Content="👥 Пользователи"/>
            </StackPanel>
        </Border>
       
       
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Label Style="{StaticResource ProjectsTitle}" Content="Доступные проекты : "/>
                <Label Margin="0,5,5,5" FontSize="17" FontWeight="SemiBold" Content="{Binding projectsCount}"/>
            </StackPanel>
            
            <Button Grid.Column="1" Style="{StaticResource MiddleBarButton}" Cursor="Hand" Click="add" HorizontalAlignment="Right" Content="➕ Новый проект"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer MaxHeight="400" Grid.Column="0" Style="{StaticResource ProjectsScrollViewer}">
                <Border Style="{StaticResource MainBorder}">
                    <ItemsControl ItemsSource="{Binding Projects}" ItemTemplate="{StaticResource ProjectCardTemplate}" HorizontalContentAlignment="Stretch">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel  HorizontalAlignment="Center">

                                </WrapPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Border>
            </ScrollViewer>
                    
            <Border Grid.Column="1" Style="{StaticResource HistoriesBorder}">
                <StackPanel>
                    <Label HorizontalAlignment="Center" Foreground="Gray" FontSize="11" Content="Наведитесь для подробной информации"/>
                    <ScrollViewer MaxHeight="400" Style="{StaticResource HistoryScrollViewer}">
                        <ItemsControl ItemsSource="{Binding ProjectHistories}" ItemTemplate="{StaticResource HistoryTemplate}" HorizontalContentAlignment="Stretch">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel>

                                    </StackPanel>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

            </Border>
        </Grid>
       
       
       
       
    </StackPanel>
</Page>
