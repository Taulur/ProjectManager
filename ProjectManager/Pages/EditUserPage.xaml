<Page x:Class="ProjectManager.Pages.EditUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1250"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="EditUserPage">

    <StackPanel Background="AntiqueWhite">
        <StackPanel Grid.Column="0">
            <TextBlock>Регистрация пользователя</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Username</TextBlock>
                <TextBox Text="{Binding user.Username}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Имя</TextBlock>
                <TextBox Text="{Binding user.Fullname}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Пароль</TextBlock>
                <TextBox Text="{Binding user.Password}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">

                <TextBlock>Дата регистрации</TextBlock>
                <TextBlock Text="{Binding user.CreatedAt}"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Выбрать роль</TextBlock>
                <ComboBox Text="{Binding user.Systemrole.Title}" ItemsSource="{Binding RolesService.SystemRoles}"
                  DisplayMemberPath="Title"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding roleId}"
                  IsEditable="True" Margin="0,5"/>
            </StackPanel>
            <Button Click="save">Создать пользователя</Button>
            <Button Click="back"> Вернуться</Button>
        </StackPanel>
    </StackPanel>
</Page>
