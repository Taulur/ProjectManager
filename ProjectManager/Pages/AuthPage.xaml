<Page x:Class="ProjectManager.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManager.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      xmlns:val="clr-namespace:ProjectManager.ValidationRules"
      d:DesignHeight="700" d:DesignWidth="1250"
      Title="AuthPage">
    
  
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <materialDesign:TransitioningContent VerticalAlignment="Center" Grid.Column="1">
            <materialDesign:TransitioningContent.OpeningEffects>
                <materialDesign:TransitionEffect Kind="ExpandIn" Duration="0:0:1" />
                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:1" />
            </materialDesign:TransitioningContent.OpeningEffects>
            <StackPanel >
                <Label Margin="10" Content="📋 Менеджер проектов" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="45"/>
                <TextBox Margin="10"
         materialDesign:HintAssist.Hint="Username"
         materialDesign:HintAssist.IsFloating="True"
         materialDesign:ValidationAssist.UsePopup="False"
         materialDesign:ValidationAssist.OnlyShowOnFocus="True"
         FontSize="25">
                    <TextBox.Text>
                        <Binding Path="Username" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <val:LoginValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <PasswordBox Margin="10" materialDesign:HintAssist.Hint="Password"  materialDesign:HintAssist.IsFloating="True" FontSize="25"
 materialDesign:ValidationAssist.UsePopup="False"
 materialDesign:ValidationAssist.OnlyShowOnFocus="True">
                    <materialDesign:PasswordBoxAssist.Password>
                        <Binding Path="Password"
             UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <val:PasswordValidation />
                            </Binding.ValidationRules>
                        </Binding>
                    </materialDesign:PasswordBoxAssist.Password>
                </PasswordBox>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>


                    </Grid.RowDefinitions>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:RippleAssist.Feedback="DarkRed"
                            Background="RoyalBlue" Foreground="White" materialDesign:ButtonAssist.CornerRadius="15"  Click="Button_Click" Width="Auto" Height="Auto" FontSize="35" Content="Войти" Margin="10" Grid.Column="1"/>

                </Grid>
            </StackPanel>
        </materialDesign:TransitioningContent>
        <materialDesign:Snackbar x:Name="MainSnackbar"
                           Grid.Column="1"            
            HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="16"
                           MessageQueue="{materialDesign:MessageQueue}" />
    </Grid>
  
</Page>
