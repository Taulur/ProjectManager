<Page x:Class="ProjectManager.Pages.ProjectUsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1100"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="ProjectUsersPage">
    <Page.Resources>
        <DataTemplate x:Key="UserTemplate">
            <Border BorderBrush="Black" BorderThickness="1" Margin="3" Height="85" Background="AliceBlue" CornerRadius="15" Cursor="Hand" Tag="{Binding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="0.9*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Margin="3" CornerRadius="100" Height="50" Width="50" Background="RoyalBlue">
                                <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Text="{Binding FirstWord}"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Vertical">
                                <TextBlock Text="{Binding Fullname}"/>
                                <TextBlock Text="{Binding Username}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock Text="👨‍💼"/>
                                    <TextBlock Text="{Binding Systemrole.Title}"/>
                                </StackPanel>

                                <Grid Margin="5" VerticalAlignment="Bottom"  HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="3" Text="Добавить участника в проекта"/>
                                    <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource ProjectChangeButton}" Click="add" Tag="{Binding}" Margin="5,0,0,0" Content="➕ Добавить" Cursor="Hand"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
              
        </DataTemplate>
        <DataTemplate x:Key="ProjectUserTemplate">
            <Border BorderBrush="Black" BorderThickness="1" Margin="3" Height="85" Background="AliceBlue" CornerRadius="15" Cursor="Hand" Tag="{Binding}"  >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="1.45*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Margin="3" CornerRadius="100" Height="50" Width="50" Background="RoyalBlue">
                        <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Text="{Binding FirstWord}"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Vertical">
                        <TextBlock Text="{Binding User.Fullname}"/>
                        <TextBlock Text="{Binding User.Username}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="👨‍💼"/>
                            <TextBlock Text="{Binding Role.Title}"/>
                        </StackPanel>

                        <Grid Margin="5" VerticalAlignment="Bottom"  HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="3" Text="Выбрать роль"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="3" Text="Исключить с проекта"/>
                            <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1" CornerRadius="5"  >
                                <ComboBox Width="100" BorderThickness="0"  Tag="{Binding}" SelectionChanged="ComboBox_SelectionChanged"  ItemsSource="{Binding Roles}"
DisplayMemberPath="Title"
SelectedValuePath="Id"
SelectedValue="{Binding RoleId}"
IsEditable="True" Margin="0,5"/>
                            </Border>
                            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource ProjectDeleteButton}" Click="remove"   Tag="{Binding}" Margin="5,0,0,0" Content="🗑️ Выгнать" Cursor="Hand"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <StackPanel Style="{StaticResource PagePanel}">
        <StackPanel Orientation="Horizontal">
            <TextBlock FontWeight="Bold" VerticalAlignment="Center" Margin="15,5,5,5" FontSize="25" Text="👥Участники проекта "/>
            <TextBlock Style="{StaticResource PageTitle}" Text="{Binding project.LastVersion.DisplayTitle}"></TextBlock>
        </StackPanel>
        <Border Style="{StaticResource TopBarBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource TopBarButton}" Cursor="Hand" Click="projects" Content="📂 Проекты"/>
                    <Button Style="{StaticResource TopBarButton}" Cursor="Hand"  Content="🕐 История"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Style="{StaticResource TopBarButton}" Click="back" Cursor="Hand"  Content="↶ Вернуться"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
         
                <Border Grid.Column="0" Style="{StaticResource MainBorder}">
                    <ScrollViewer MaxHeight="450" Style="{StaticResource HistoryScrollViewer}">
                    <ItemsControl ItemsSource="{Binding projectUsers}" ItemTemplate="{StaticResource ProjectUserTemplate}" HorizontalContentAlignment="Stretch">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel>

                            </StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                </ScrollViewer>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource MainBorder}">
                <ScrollViewer  Height="450" Style="{StaticResource HistoryScrollViewer}">
                    <ItemsControl ItemsSource="{Binding usersServices.Users}" ItemTemplate="{StaticResource UserTemplate}" HorizontalContentAlignment="Stretch">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel>

                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
    </StackPanel>
</Page>
